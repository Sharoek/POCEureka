<div
    id="{{ctx.id}}"
    class="{{ctx.classes}} openforms-component {% if (ctx.component.hidden) { %}openforms-component--hidden{% } %}"
    {% if (ctx.styles) { %} styles="{{ctx.styles}}"{% } %}
    ref="component"
    {% if (ctx.component.hidden) { %} title="{{ ctx.t('Hidden component') }}"{% } %}
>
  {% if (ctx.visible) { %}
  {{ctx.children}}
  <div ref="messageContainer" class="formio-errors invalid-feedback"></div>
  {% } %}
</div>
